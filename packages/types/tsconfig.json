{
  "extends": "tsconfig/base.json",
  "include": ["index.ts","src/**/*.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node"
  }
}
